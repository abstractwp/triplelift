extends ../template.pug

block content
  .loading
    img(src="/images/Logomark - White.svg")
  .fries.menu-hide
    .flex.flex-col.justify-center.items-center.h-full
      include ../modules/menu.pug
  .sticky-header
    #navigation.burger-and-fries-container
        a(href="/" class="logo-in-navigation relative")
          img(
            class="logo-in-navigation-img white-logo" 
            src="/images/triplelift-logo.svg"
          )
          img(
            class="orange-logo" 
            src="/images/logo-orange.svg"
          )
        .burger-and-fries
          <button class="hamburger hamburger--collapse js-hamburger" type="button">
            <span class="hamburger-box">
              <span class="hamburger-inner"></span>
            </span>
          </button> 
        .menu-on-large
          include ../modules/menu.pug
  .homepage-hero
    .slide-1
      .flex.items-center.slider-static
        img.slider-arrow.right(src="/images/arrow-left.svg")
        include ../modules/phone-breakout.pug
        img.slider-arrow.left(src="/images/arrow-right.svg")      
      img.cta(src="/images/Frame 14.png" class="cta")
    .copy.mt3
      h1.f26.bold Reinventing ad placement, one medium at a time
      p.mt3 Since pioneering Native advertising in 2012, we have built 4 product lines across 13 different formats, each with elements of customization not found anywhere else in the industry.
    .down-arrow
      img.arrow-down(src="/images/arrow-down.svg")
  .frames-from-figma
    img(src="/images/Frame 38.png" )
    img(src="/images/Frame 9.png" )
    img(src="/images/Frame 39.png" )
    img(src="/images/Frame 13.png" )
    
    