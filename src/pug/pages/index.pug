extends ../template.pug

block content
  .loading.fade-out(data-aos)
    img(src="/images/Logomark - White.svg")
  .fries.menu-hide
    .flex.flex-col.justify-center.items-center.h-full
      include ../modules/menu.pug
  #navigation.burger-and-fries-container
      a(href="/" class="logo-in-navigation relative", data-aos="fade-right")
        img(
          class="logo-in-navigation-img white-logo" 
          src="/images/triplelift-logo.svg"
        )
        img(
          class="orange-logo" 
          src="/images/logo-orange.svg"
        )
      .burger-and-fries(data-aos="fade-left")
        <button class="hamburger hamburger--collapse js-hamburger" type="button">
          <span class="hamburger-box">
            <span class="hamburger-inner"></span>
          </span>
        </button> 
      .menu-on-large
        include ../modules/menu.pug
  .homepage-hero
    .flex.items-center.slider-static
      img(src="/images/arrow-left.svg" data-aos="fade-left")
      include ../modules/phone-breakout.pug
      img(src="/images/arrow-right.svg" data-aos="fade-right")      
    img(src="/images/Frame 14.png" class="cta" data-aos="zoom-out-up")
    .copy.mt3(data-aos="fade-up")
      h1.f26.bold Reinventing ad placement, one medium at a time
      p.mt3 Since pioneering Native advertising in 2012, we have built 4 product lines across 13 different formats, each with elements of customization not found anywhere else in the industry.
  .frames-from-figma
    img(src="/images/Frame 38.png" data-aos="fade-up" data-aos-offset="-120")
    img(src="/images/Frame 9.png" data-aos="fade-up" data-aos-offset="-120")
    img(src="/images/Frame 39.png" data-aos="fade-up" data-aos-offset="-120")
    img(src="/images/Frame 13.png" data-aos="fade-up" data-aos-offset="-120")
    
    